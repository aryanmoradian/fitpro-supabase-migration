{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // ⬅️ تغییر: بهتر است از ESNext استفاده کنید
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    
    // ⬅️ اصلاح نهایی: استفاده از 'bundler' برای Module Resolution
    "moduleResolution": "bundler", 
    
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true, 
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      // ⬅️ برای اطمینان از اینکه alias کار کند، علامت سوال را اضافه می‌کنیم (اختیاری)
      "@/*": ["./src/*"] 
    },
    
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src", "api"],
  "exclude": ["node_modules"]
}