{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    // --- افزودن تنها پارامترهای مورد نیاز ---
    "allowSyntheticDefaultImports": true, // رفع خطای TS1259
    "strict": true, // توصیه شده برای TypeScript
    // ----------------------------------------

    "baseUrl": ".", // برای کارکرد paths نیاز است
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": ["src", "api"]
}